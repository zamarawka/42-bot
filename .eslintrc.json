{
  "root": true,
  "env": {
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "script"
  },
  "rules": {
    "strict": "off",
    "class-methods-use-this": 0,
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }]
  }
}
